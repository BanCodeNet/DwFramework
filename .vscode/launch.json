{
    "version": "0.2.0",
    "inputs": [
        {
            "type": "pickString",
            "id": "ExampleProjectName",
            "options": [
                "SimpleExample"
            ],
            "description": "请选择需要调试的项目"
        },
        {
            "type": "pickString",
            "id": "TemplateProjectName",
            "options": [
                "SimpleConsole",
            ],
            "description": "请选择需要调试的项目"
        }
    ],
    "configurations": [
        {
            "name": "Debug Example",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build ${input:ExampleProjectName}",
            "program": "dotnet",
            "args": [
                "${input:ExampleProjectName}.dll",
            ],
            "cwd": "${workspaceFolder}/build/${input:ExampleProjectName}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "ENVIRONMENT_TYPE": "Development"
            }
        },
        {
            "name": "Debug Template",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build ${input:TemplateProjectName}",
            "program": "dotnet",
            "args": [
                "${input:TemplateProjectName}.dll",
            ],
            "cwd": "${workspaceFolder}/build/${input:TemplateProjectName}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Build Nuget Package",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build BuildTools",
            "program": "dotnet",
            "args": [
                "BuildTools.dll"
            ],
            "cwd": "${workspaceFolder}/build/BuildTools",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}