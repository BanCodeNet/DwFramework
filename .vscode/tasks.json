{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SimpleExample",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/build/SimpleExample",
                "${workspaceFolder}/example/SimpleExample/SimpleExample.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build SimpleConsole",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/build/SimpleConsole",
                "${workspaceFolder}/template/SimpleConsole/SimpleConsole.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build BuildTools",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/build/BuildTools",
                "${workspaceFolder}/utils/BuildTools/BuildTools.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}