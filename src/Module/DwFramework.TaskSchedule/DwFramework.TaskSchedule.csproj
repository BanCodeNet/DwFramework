<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <ReleaseVersion>2.0.1</ReleaseVersion>
        <SynchReleaseVersion>false</SynchReleaseVersion>
        <Build>$([System.DateTime]::op_Subtraction($([System.DateTime]::get_Now().get_Date()),$([System.DateTime]::new(2000,1,1))).get_TotalDays())</Build>
        <Revision>$([MSBuild]::Divide($([System.DateTime]::get_Now().get_TimeOfDay().get_TotalSeconds()), 2).ToString('F0'))</Revision>
        <Version>$(ReleaseVersion).$(Revision)</Version>
        <Authors>DwGoing</Authors>
        <Description>DwFramework 任务调度库</Description>
        <PackageProjectUrl>https://github.com/Dwgoing/DwFramework</PackageProjectUrl>
        <ReleaseVersion>2.0.1</ReleaseVersion>
    </PropertyGroup>
    <ItemGroup>
        <Folder Include="Extensions\" />
        <Folder Include="Models\" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\DwFramework.Core\DwFramework.Core.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Quartz" Version="3.1.0" />
    </ItemGroup>
    <ItemGroup>
        <None Update="README.md">
            <IncludeInPackage>true</IncludeInPackage>
        </None>
        <None Update="LICENSE">
            <IncludeInPackage>true</IncludeInPackage>
        </None>
    </ItemGroup>
</Project>