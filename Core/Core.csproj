    <PackageId>DwFramework.Core</PackageId>
    <PackageVersion>0.1.7</PackageVersion>
    <Authors>DwGoing</Authors>
    <Description>DwFramework 核心库</Description>
    <Copyright>DwGoing</Copyright>
    <DevelopmentDependency>true</DevelopmentDependency>
    <PackageLicenseUrl>https://licenses.nuget.org/MIT</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Owners>DwGoing</Owners>
    <PackageProjectUrl>https://github.com/Dwgoing/DwFramework/tree/master/Core</PackageProjectUrl>
